<view class="container"> 
  <view class="help">使用说明</view>
  <view class="empty-view" wx:if="{{ couponList.length <= 0 }}">
      <image class="icon" src="../../../static/images/allorder.png"></image>
      <text class="text">无优惠卷信息</text>
    </view>
  <view wx:else class="coupon-list">
    <block wx:for="{{couponList}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
      <view data-item="{{item}}" bindtap='tapCoupon' class="item" style="background: {{item.coupon_status==1?'linear-gradient(to right,#cfa568,#e3bf79)':'linear-gradient(to right,#999,#DDDDDD)'}}">
        <view class="content">
          <view class="left">
            <view class="name">{{item.name}}</view>
            <view class="time">有效期至{{item.use_end_date}}</view>
          </view>
          <view class="right">
            <image wx:if="{{item.coupon_status==1}}" class='mid-img' src='../../../static/images/coupon_ksy.png'></image>
    <image wx:if="{{item.coupon_status==3}}" class='mid-img' src='../../../static/images/coupon_bky.png'></image>
          </view>
        </view>
        <view class="condition">
          <text class="txt">满￥{{item.min_goods_amount}} 减￥{{item.type_money}}</text>
        </view>
      </view>
    </block>

    </view>

</view>